{
  "fields": [
    {
      "component": "select",
      "label": "category icon",
      "name": "categoryIcon",
      "valueType": "string",
      "options": [
        { "name": "Yes", "value": "yes" },
        { "name": "No", "value": "no" }
      ]
    },
    {
      "component": "select",
      "label": "category icon num",
      "name": "categoryIconNum",
      "valueType": "string",
      "options": [
        { "name": "1", "value": "1" },
        { "name": "2", "value": "2" }
      ],
      "condition": {
        "and": [
          { "===": [{ "var": "categoryIcon" }, "yes"] }
        ]
      }
    },
    {
      "component": "container",
      "label": "category",
      "name": "categoryAdvanced",
      "collapsible": true,
      "fields": [
        {
          "component": "select",
          "label": "icon position",
          "name": "categoryIconPosition",
          "valueType": "string",
          "options": [
            { "name": "1", "value": "1" },
            { "name": "2", "value": "2" },
            { "name": "3", "value": "3" },
            { "name": "4", "value": "4" },
            { "name": "5", "value": "5" },
            { "name": "6", "value": "6" }
          ],
          "condition": {
            "and": [
              { "===": [{ "var": "categoryIcon" }, "yes"] },
              { "===": [{ "var": "categoryIconNum" }, "1"] }
            ]
          }
        },
        {
          "component": "reference",
          "valueType": "string",
          "label": "first icon",
          "name": "categoryIcon1",
          "multi": false,
          "condition": {
            "and": [
              { "===": [{ "var": "categoryIcon" }, "yes"] }
            ]
          }
        },
        {
          "component": "reference",
          "valueType": "string",
          "label": "second icon",
          "name": "categoryIcon2",
          "multi": false,
          "condition": {
            "and": [
              { "===": [{ "var": "categoryIcon" }, "yes"] },
              { "===": [{ "var": "categoryIconNum" }, "2"] }
            ]
          }
        },

        {
          "component": "select",
          "label": "font (D/T/M)",
          "name": "categoryFont",
          "valueType": "string",
          "options": [
            { "name": "tt-md-16", "value": "tt-md-16" },
            { "name": "tt-md-18", "value": "tt-md-18" },
            { "name": "tt-md-20", "value": "tt-md-20" },
            { "name": "tt-md-24", "value": "tt-md-24" },
            { "name": "tt-nr-16", "value": "tt-nr-16" },
            { "name": "tt-nr-18", "value": "tt-nr-18" },
            { "name": "tt-nr-20", "value": "tt-nr-20" },
            { "name": "tt-nr-24", "value": "tt-nr-24" },
            { "name": "tt-bd-16", "value": "tt-bd-16" },
            { "name": "tt-bd-18", "value": "tt-bd-18" },
            { "name": "tt-bd-20", "value": "tt-bd-20" },
            { "name": "tt-bd-24", "value": "tt-bd-24" }
          ]
        },
        {
          "component": "text",
          "label": "font color (hex)",
          "name": "categoryFontColor",
          "valueType": "string"
        }
      ]
    }
  ]
}
